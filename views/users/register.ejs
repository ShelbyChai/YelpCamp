<% layout('layout/authBoilerplate') %>

<form
action="/register"
method="POST"
class="validated-form col-9 col-sm-6 col-lg-9"
novalidate>
    <p class="auth-title">Sign up to YelpCamp</p>
    <div class="mt-5">
        <label class="form-label" for="username">Username</label
        ><input
        class="form-control"
        type="text"
        id="username"
        name="username"
        required />
    </div>
    <div class="mt-4">
        <label class="form-label" for="email">Email</label
            ><input class="form-control" type="email" id="email" name="email" required />
    <div class="my-4">
        <label class="form-label" for="password">Password</label
        ><input
        class="form-control"
        type="password"
        id="password"
        name="password"
        required />
    </div>
    <button class="auth-btn col-12 py-3">Sign up</button>
    <p class="text-black-50 text-center mt-4">
        Already have an account? <a class="text-black-50" href="/login">Sign in</a>
    </p>
</form>